<html>
	<head>
		<link rel="stylesheet" href="/css/bootstrap.min.css" />
	</head>
	<body>
		<div class="container-fluid">
			<div class="mt-3 d-flex justify-content-center">
				<div class="list-group">
					<a href="/" class="list-group-item list-group-item-action active" style="background-color: #007ac1">Tambah data</a>
					<a href="/lihat" class="list-group-item list-group-item-action">Lihat data</a>
					<a href="/update" class="list-group-item list-group-item-action">Update data</a>
					<a href="/hapus" class="list-group-item list-group-item-action">Hapus data</a>
				</div>
				<div class="card w-50 ms-2">	
					<div class="card-header d-flex m-0 justify-content-center" style="background-color: #03a9f4;">
						<h3 class="text-light">
							Data Penduduk
						</h3>
					</div>
					<div class="card-body">
						<form action="/" method="post">
							<div class="mb-2">
								<label for="inputNamaLengkap" class="form-label">Nama Lengkap</label>
								<input type="text" class="form-control" name="nama" id="inputNamaLengkap">
							</div>
							<div class="mb-2">
								<label for="inputPekerjaan" class="form-label">Pekerjaan</label>
								<input type="text" class="form-control" name="pekerjaan" id="inputPekerjaan">
							</div>
							<div class="mb-2">
								<label for="inputKotaAsal" class="form-label">Kota Asal</label>
								<input type="text" class="form-control" name="kota" id="inputKotaAsal">
							</div>
							<input type="submit" class="btn btn-primary" style="background-color: #007ac1" value="Kirim">
							<input type="reset" class="btn btn-primary" style="background-color: #007ac1" value="Reset">
						</form>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>